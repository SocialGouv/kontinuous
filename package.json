{
  "name": "~dev",
  "version": "1.93.7",
  "repository": "git@github.com:SocialGouv/kontinuous.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "docsify-cli": "^4.4.4",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2"
  },
  "resolutions": {
    "@modjo-plugins/http-server": "latest",
    "@modjo-plugins/core": "latest",
    "@modjo-plugins/config": "latest",
    "@modjo-plugins/express": "latest",
    "@modjo-plugins/express-monitor": "latest",
    "@modjo-plugins/http-logger": "latest",
    "@modjo-plugins/lightship": "latest",
    "@modjo-plugins/logger": "latest",
    "@modjo-plugins/microservice-oapi": "latest",
    "@modjo-plugins/oa": "latest",
    "@modjo-plugins/shutdown-handlers": "latest",
    "tar": "^6.1.9",
    "multer": "^1.4.4-lts.1",
    "got": "^11.8.5",
    "fast-copy": "2.1.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "postinstall": "[ -d '.husky' ] && husky install || true && yarn install:plugins",
    "install:plugins": "yarn install:plugin:contrib && yarn install:plugin:fabrique",
    "install:plugin:contrib": "cd plugins/contrib && yarn",
    "install:plugin:fabrique": "cd plugins/fabrique && yarn",
    "lint": "eslint .",
    "release": "standard-version",
    "retag-legacy": "TAG=$(git describe --tags $(git rev-list --tags --max-count=1) | cut -d '.' -f 1) && git tag -f $TAG && git push origin :refs/tags/$TAG && git push -f origin master --tags",
    "retag": "TAG=$(git describe --tags $(git rev-list --tags --max-count=1) | cut -d '.' -f 1) && git branch -f v1 master && git push -f origin v1",
    "push": "git push -f --follow-tags origin master",
    "delivery": "git push && yarn release && yarn push",
    "test": "yarn workspaces foreach --no-private --parallel run test",
    "test:kontinuous": "yarn workspace kontinuous test",
    "test:webhook": "yarn workspace ~webhook test",
    "dev:webhook": "docker-compose up --build webhook",
    "docker:webhook": "DOCKER_BUILDKIT=1 docker-compose -f docker-compose.built.yaml up --build webhook",
    "docker:kontinuous:build": "DOCKER_BUILDKIT=1 docker build -f packages/kontinuous/Dockerfile -t kontinuous .",
    "docker:kontinuous:run": "docker run -it -v $PWD:/workspace -e KS_ISLOCAL=true kontinuous",
    "docker:kontinuous": "yarn docker:kontinuous:build && yarn docker:kontinuous:run",
    "dev:docs": "docsify serve docs",
    "logs:remote-webhook": "kubectl --context prod -n kontinuous-webhook logs -f --all-containers -l component=kontinuous-webhook",
    "upgrade:modjo": "yarn up -R \"@modjo-plugins/*\""
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "standard-version": {
    "scripts": {
      "posttag": "yarn retag"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@4.0.0-rc.15"
}
