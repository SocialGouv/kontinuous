{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/socialgouv/kontinuous/schemastore/plugins/contrib/jobs/seed-db/use.schema.json",
  "title": "schema for seed-db job usage",
  "type": "object",
  "additionalProperties": false,
  "required": ["pgSecretRefName", "seedPath"],
  "properties": {
    "pgSecretRefName ": {
      "description": "Secret with Postgresql credentials to execute the script",
      "type": "string"
    },
    "seedPath": {
      "description": "Path to .sql file in the repo",
      "type": "string"
    }
  }
}
