{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {                        
    "module": "node16",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "isolatedModules": false
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "exclude":[
    "./node_modules"
  ]
}