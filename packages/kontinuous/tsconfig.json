{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "isolatedModules": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~common/*": ["../common/*"],
      "helm-tree/*": ["../helm-tree/*"]
    }
  },
  "exclude": ["./node_modules"]
}
