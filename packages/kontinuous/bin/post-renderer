#!/usr/bin/env node
const fs = require("fs-extra")
const yaml = require("~common/utils/yaml")
const asyncShell = require("~common/utils/async-shell")

const main = async () => {
  const postRendererPath = `${process.cwd()}/charts/project/post-renderer`
  if (!(await fs.pathExists(postRendererPath))) {
    process.stdin.pipe(process.stdout)
    return
  }
  const stdin = fs.readFileSync(0, "utf-8")
  const manifests = yaml.loadAll(stdin)
  const json = JSON.stringify(manifests)

  const rendered = await asyncShell(postRendererPath, {}, (proc) => {
    proc.stdin.write(json)
    proc.stdin.end()
  })

  for (const manifest of yaml.loadAll(rendered)) {
    if (!manifest) {
      continue
    }
    process.stdout.write("---\n")
    process.stdout.write(yaml.dump(manifest))
  }
}

main()
