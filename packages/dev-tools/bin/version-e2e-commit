#!/bin/bash
stash() {
  # check if we have uncommited changes to stash
  git status --porcelain | grep "^." >/dev/null
  if [ $? -eq 0 ]; then
    if git stash save -u "git-update on `date`"; then
      stash=1
    fi
  fi
}
unstash() {
  # check if we have uncommited change to restore from the stash
  if [ $stash -eq 1 ]; then
    git stash pop;
  fi
}
stash=0
stash

set -e
VERSION=$(git describe --tags $(git rev-list --tags --max-count=1))
yarn version-e2e:set
yarn lint --fix
git add --all
git commit -m "chore: version ${VERSION} e2e linking"
set +e

unstash
